@{
    ViewBag.Title = "ViewOrdersU";
    Layout = "~/Views/Shared/LayoutUsers.cshtml";
}

@model WebApplication.Models.UserDataModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Orders</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .order-details .modal-body {
            font-size: 14px;
        }

            .order-details .modal-body p {
                margin: 0;
            }

            .order-details .modal-body .order-section {
                margin-bottom: 20px;
            }

                .order-details .modal-body .order-section .section-title {
                    font-weight: bold;
                    margin-bottom: 10px;
                }

                .order-details .modal-body .order-section .section-content {
                    border-top: 1px solid #ddd;
                    padding-top: 10px;
                }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Your Orders</h2>

        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Country</th>
                    <th>Shipping address</th>
                    <th>Actions</th>
                </tr>
            </thead>


            <tbody id="orderTable">
                @{
                    var dataOrdersTable = Model.dataOrderForTable(Model.UserId);

                    foreach (var item in dataOrdersTable)
                    {
                        if (item != null)
                        {
                                <tr>
                                    <td>@item.orderNumber</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Country</td>
                                    <td>@item.ShippingAddress</td>

                                    <td>
                                        <a href="@Url.Action("ViewDetailsAboutOrder", "HomeUser", new { orderId = @item.orderId })" class="btn btn-info btn-sm view-btn">View</a>
                                    </td>
                                </tr>
                        }
                    }
                }


            </tbody>
        </table>




    </div>

    

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
