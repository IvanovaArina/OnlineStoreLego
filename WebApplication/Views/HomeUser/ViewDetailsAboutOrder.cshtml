
@{
    ViewBag.Title = "ViewDetailsAboutOrder";
    Layout = "~/Views/Shared/LayoutUsers.cshtml";
}

@model List<WebApplication.Models.MyIntOrderModel>

<div @*class="modal fade order-details" id="viewOrderModal" tabindex="-1" role="dialog" aria-labelledby="viewOrderModalLabel" aria-hidden="true"*@>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewOrderModalLabel">Order Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="order-section">
                    <div class="section-title">Order Details</div>
                    <div class="section-content">
                        <p><strong>Order No:</strong> <span id="orderNo"></span></p>
                        <p><strong>Order Date:</strong> <span id="orderDate"></span></p>
                    </div>
                </div>
                <div class="order-section">
                    <div class="section-title">Delivery Address</div>
                    <div class="section-content" id="deliveryAddress"></div>
                </div>
                <div class="order-section">
                    <div class="section-title">Order Status</div>
                    <div class="section-content">
                        <p><strong>Status:</strong> <span id="orderStatus"></span></p>
                        <p id="deliveryDate"></p>
                    </div>
                </div>
                <div class="order-section">
                    <div class="section-title">Items</div>
                    <div class="section-content">
                        <ul id="orderItems" class="list-unstyled"></ul>
                    </div>
                </div>
                <div class="order-section">
                    <div class="section-title">Payment Details</div>
                    <div class="section-content">
                        <p><strong>Payment Method:</strong> <span id="paymentMethod"></span></p>
                    </div>
                </div>
                <div class="order-section">
                    <div class="section-title">Order Total</div>
                    <div class="section-content">
                        <p><strong>Sub-Total:</strong> <span id="subTotal"></span></p>
                        <p><strong>Delivery:</strong> <span id="deliveryCost"></span></p>
                        <p><strong>Total:</strong> <span id="totalCost"></span></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary">Close</button>

            </div>
        </div>
    </div>
</div>