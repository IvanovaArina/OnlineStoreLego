@{
    ViewBag.Title = "Edit Article";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@model WebApplication.Models.ArticleDataModel

<h3>Edit Article @Model.ArticleNumber</h3>

<form asp-action="EditArticle" method="post">
    <div class="form-group">
        <label for="articleTitle">Title</label>
        <input type="text" class="form-control" id="articleTitle" name="Title" value="@Model.ArticleName" required>
    </div>

    <div class="form-group">
        <label for="articleAuthor">Author</label>
        <input type="text" class="form-control" id="articleAuthor" name="Author" value="@Model.AuthorName" required>
    </div>

    <div class="form-group">
        <label for="articleCategory">Category</label>
        <input type="text" class="form-control" id="articleCategory" name="Category" value="@Model.Category" required>
    </div>

    <div class="form-group">
        <label for="articleContent">Content</label>
        <textarea class="form-control" id="articleContent" name="Content" rows="5" required>@Model.TextOfArticle</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>
</form>
