</head>>
</head>
<body style="background-image: url('@Url.Content("~/assets/media/banner/bg.png")');">
    <!-- Header Area Start -->
    <header class="large-screens">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg p-0">
                <div class="collapse navbar-collapse" id="mynavbar">
                    <div class="left-nav">
                        <a href="@Url.Action("Home", "Login")" class="navbar-brand m-0 p-0"><img alt src="~/assets/media/logo.png"></a>
                        <ul class="navbar-nav m-0">
                            <li class="has-children">


                            </li>
                            <li class="menu-item">

                                @Html.ActionLink("Home", "Home", "Login", new { @class = "menu-link" })
                            </li>





                            <li class="menu-item">

                                @Html.ActionLink("About us", "About", "Login", new { @class = "menu-link" })
                            </li>
                        </ul>
                    </div>

                    <div class="right-nav">
                        <ul class="navbar-nav m-0">
                            <li class="menu-item">
                                @Html.ActionLink("Shop", "ShopListing", "Home", new { @class = "menu-link" })

                            </li>
                            <li class="has-children">
                                @Html.ActionLink("Blog", "Blog", "Home", new { @class = "menu-link" })

                            </li>
                        </ul>
                            </li>
                        </ul>
                       
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <header class="small-screen">
        <div class="container-fluid">
            <div class="mobile-menu">
                <div>
                    <a class="navbar-brand" href="index.html">
                        <img alt src="./~/assets/media/logo.png">
                    </a>
                </div>
                <div class="hamburger-menu">
                    <div class="bar"></div>
                </div>
            </div>
            <nav class="mobile-navar d-xl-none">
                <ul>
                    <li class="has-children">
                        Home <span class="icon-arrow"></span>
                        <ul class="children">
                            <li><a href="index.html">Home 1</a></li>
                            <li><a href="index-2.html" class="active">Home 2</a></li>
                        </ul>
                    </li>
                    <li class="has-children">
                        Pages <span class="icon-arrow"></span>
                        <ul class="children">
                            <li><a href="about.html">About us</a></li>
                            <li><a href="blog.html">Blog</a></li>
                            <li><a href="blog-detail.html">Blog Detail</a></li>
                            <li><a href="product-detail.html">Product Detail</a></li>
                            <li><a href="cart.html">Cart</a></li>
                            <li><a href="checkout.html">Checkout</a></li>
                            <li><a href="wishlist.html">Wishlist</a></li>
                            <li><a href="contact.html">Contact</a></li>
                        </ul>
                    </li>
                    <li class="has-children">
                        Shop <span class="icon-arrow"></span>
                        <ul class="children">
                            <li><a href="shop-listing-1.html">Shop Grid</a></li>
                            <li><a href="shop-listing-2.html">Shop Listing</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- end card -->
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5 mt-5">
                    <div class="card" style="max-width: 400px; border-radius: 20px; margin-top: 20px;">
                        <div class="card-body p-4" style="background-color: white; border-radius: 10px;">

                            <div class="text-center w-75 m-auto" style="border-radius: 10px;">
                                <a href="~/">
                                    <!-- Update the href to point to your home or specific page -->
                                </a>
                                <p class="text-muted mb-4 mt-3" style="font-size: 20px;">Enter your email address and password</p>
                            </div>

                            @using (Html.BeginForm("LogIn", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <!-- Email Input -->
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>

                                <!-- Password Input -->
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>

                                <!-- Сообщения об ошибках авторизации -->
                                <!-- General Error Message -->
                                if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }

                                <!-- Submit Button -->
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-primary">Log In</button>
                                </div>
                            }

                            <!-- Другие элементы формы -->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12 text-center">
            <p> <a href="pages-recoverpw.html" class="text-muted ml-1">Forgot your password?</a></p>
            <p class="text-muted">Don't have an account? <a href="pages-register.html" class="text-primary font-weight-medium ml-1">@Html.ActionLink("Sign up", "SignUp", "Login", new { @class = "text-primary font-weight-medium ml-1" })</a></p>
        </div> <!-- end col -->
    </div>
    <!-- end row -->
    </div> <!-- end col -->
    </div>
    <!-- end row -->
    </div>
    <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor js -->
    <script src="~/assets/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.min.js"></script>

</body>
</html>