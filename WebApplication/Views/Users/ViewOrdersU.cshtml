@{
    ViewBag.Title = "ViewOrdersU";
    Layout = "~/Views/Shared/LayoutUsers.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Orders</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .order-details .modal-body {
            font-size: 14px;
        }

            .order-details .modal-body p {
                margin: 0;
            }

            .order-details .modal-body .order-section {
                margin-bottom: 20px;
            }

                .order-details .modal-body .order-section .section-title {
                    font-weight: bold;
                    margin-bottom: 10px;
                }

                .order-details .modal-body .order-section .section-content {
                    border-top: 1px solid #ddd;
                    padding-top: 10px;
                }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Your Orders</h2>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>2023-05-21</td>
                    <td>$50.00</td>
                    <td>Pending</td>
                    <td>
                        <button class="btn btn-info btn-sm view-btn" data-id="1">View</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>2023-05-20</td>
                    <td>$75.00</td>
                    <td>Shipped</td>
                    <td>
                        <button class="btn btn-info btn-sm view-btn" data-id="2">View</button>
                    </td>
                </tr>
                <!-- Add more orders here -->
            </tbody>
        </table>
    </div>

    <!-- Modal for viewing order details -->
    <div class="modal fade order-details" id="viewOrderModal" tabindex="-1" role="dialog" aria-labelledby="viewOrderModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewOrderModalLabel">Order Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="order-section">
                        <div class="section-title">Order Details</div>
                        <div class="section-content">
                            <p><strong>Order No:</strong> <span id="orderNo"></span></p>
                            <p><strong>Order Date:</strong> <span id="orderDate"></span></p>
                        </div>
                    </div>
                    <div class="order-section">
                        <div class="section-title">Delivery Address</div>
                        <div class="section-content" id="deliveryAddress"></div>
                    </div>
                    <div class="order-section">
                        <div class="section-title">Order Status</div>
                        <div class="section-content">
                            <p><strong>Status:</strong> <span id="orderStatus"></span></p>
                            <p id="deliveryDate"></p>
                        </div>
                    </div>
                    <div class="order-section">
                        <div class="section-title">Items</div>
                        <div class="section-content">
                            <ul id="orderItems" class="list-unstyled"></ul>
                        </div>
                    </div>
                    <div class="order-section">
                        <div class="section-title">Payment Details</div>
                        <div class="section-content">
                            <p><strong>Payment Method:</strong> <span id="paymentMethod"></span></p>
                        </div>
                    </div>
                    <div class="order-section">
                        <div class="section-title">Order Total</div>
                        <div class="section-content">
                            <p><strong>Sub-Total:</strong> <span id="subTotal"></span></p>
                            <p><strong>Delivery:</strong> <span id="deliveryCost"></span></p>
                            <p><strong>Total:</strong> <span id="totalCost"></span></p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.view-btn').on('click', function () {
                var orderId = $(this).data('id');

                // Пример данных для демонстрации
                var order = {
                    Id: "123456789",
                    Date: "10 May, 2024",
                    DeliveryAddress: "John Doe, 123 Toy Street, Fun City, Wonderland, 12345, 9876543210",
                    Status: "Delivered",
                    DeliveryDate: "Thursday 15th May 2024",
                    Items: [
                        {
                            Image: "https://via.placeholder.com/64",
                            Name: "Teddy Bear",
                            Description: "Soft and cuddly teddy bear",
                            Price: "$20.00",
                            Size: "Medium",
                            Color: "Brown"
                        },
                        {
                            Image: "https://via.placeholder.com/64",
                            Name: "Lego Set",
                            Description: "Classic building blocks set",
                            Price: "$30.00",
                            Size: "500 pieces",
                            Color: "Multicolor"
                        },
                        {
                            Image: "https://via.placeholder.com/64",
                            Name: "Toy Car",
                            Description: "Remote controlled sports car",
                            Price: "$25.00",
                            Size: "1:18 scale",
                            Color: "Red"
                        }
                    ],
                    PaymentMethod: "MasterCard",
                    SubTotal: "$75.00",
                    DeliveryCost: "FREE",
                    TotalCost: "$75.00"
                };

                // Заполнение данных в модальном окне
                $('#orderNo').text(order.Id);
                $('#orderDate').text(order.Date);
                $('#deliveryAddress').html(order.DeliveryAddress);
                $('#orderStatus').text(order.Status);
                $('#deliveryDate').text(order.DeliveryDate ? 'Delivered: ' + order.DeliveryDate : '');

                var itemsHtml = '';
                $.each(order.Items, function (index, item) {
                    itemsHtml += `
                            <li class="media">
                                <img src="${item.Image}" class="mr-3" alt="${item.Name}" style="width: 64px;">
                                <div class="media-body">
                                    <h6 class="mt-0 mb-1">${item.Name}</h6>
                                    ${item.Description}<br>
                                    <strong>${item.Price}</strong><br>
                                    Size: ${item.Size}<br>
                                    Color: ${item.Color}
                                </div>
                            </li>`;
                });
                $('#orderItems').html(itemsHtml);

                $('#paymentMethod').text(order.PaymentMethod);
                $('#subTotal').text(order.SubTotal);
                $('#deliveryCost').text(order.DeliveryCost);
                $('#totalCost').text(order.TotalCost);

                // Показать модальное окно
                $('#viewOrderModal').modal('show');
            });
        });
    </script>
</body>
</html>
