
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Index</h2>

@model WebApplication.Models.ReviewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Review Management</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Reviews Pending Approval</h2>
        <div class="row mb-3">
            <div class="col-md-4">
                <input type="text" id="searchPending" class="form-control" placeholder="Search for reviews...">
            </div>
        </div>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Product</th>
                    <th>Review</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="reviewTable">
                @{
                    var pendingReviewTable = Model.reviewForTable();

                    foreach (var item in pendingReviewTable)
                    {
                        if (item != null)
                        {
                            <tr>

                                <td>@item.ReviewId</td>
                                <td>@item.User</td>
                                <td>@item.Product</td>
                                <td>@item.Text</td>
                                <td>@item.Rating</td>
                                <td>
                                    <button class="btn btn-success btn-sm accept-btn">Accept</button>
                                    <button class="btn btn-warning btn-sm deny-btn">Deny</button>
                                </td>
                            </tr>
                        }
                    }
                }

                <!-- Add more reviews here -->
            </tbody>
        </table>

        <h2 class="mb-4">Approved Reviews</h2>
        <div class="row mb-3">
            <div class="col-md-4">
                <input type="text" id="searchApproved" class="form-control" placeholder="Search for reviews...">
            </div>
        </div>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Product</th>
                    <th>Review</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="deleteReviewTable">
                @{

                    var approvedReviewTable = Model.reviewForTable();

                    foreach (var item in approvedReviewTable)
                    {
                        if (item != null)
                        {
                            <tr>

                                <td>@item.ReviewId</td>
                                <td>@item.User</td>
                                <td>@item.Product</td>
                                <td>@item.Text</td>
                                <td>@item.Rating</td>
                                <td>
                                    <form asp-action="AcceptReview" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@item.ReviewId" />
                                        <button type="submit" class="btn btn-success btn-sm">Accept</button>
                                    </form>
                                    <form asp-action="DeleteReview" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@item.ReviewId" />
                                        <button type="submit" class="btn btn-warning btn-sm">Deny</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                }
                <!-- Add more reviews here -->
            </tbody>
        </table>

        <div class="text-left">
            <button class="btn btn-danger btn-lg" id="addReviewBtn">Add Review</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>$(document).ready(function () {
            $('#searchPending').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('#reviewTable tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $('#searchApproved').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('#deleteReviewTable tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $('.accept-btn').on('click', function () {
                // Accept button functionality
                alert('Review accepted');
                // Here you can add an AJAX call to update the review status in the database
            });

            $('.deny-btn').on('click', function () {
                // Deny button functionality
                alert('Review denied');
                // Here you can add an AJAX call to update the review status in the database
            });

            $('.delete-btn').on('click', function () {
                // Delete button functionality
                if (confirm('Are you sure you want to delete this review?')) {
                    $(this).closest('tr').remove();
                }
            });

            $('#addReviewBtn').on('click', function () {
                // Add review button functionality
                alert('Add Review button clicked');
                // Here you can add code to show a modal or redirect to a review creation page
            });
        });</script>
</body>
</html>