
@{
    ViewBag.Title = "HomeAdmin2";
    Layout = "~/Views/Shared/ALayout.cshtml";
}
@model WebApplication.Models.ProductModel
<!-- Hero Banner start -->
<div class="hero-banner-2">
    <div class="container">
        <div class="content">
            <div class="title mb-32">
                <h2 class="h-61 bold color-white">WONDER & EXCITEMENT</h2>
                <p class="color-white">
                    Discover the joy of play with our wide selection of toys for children of all ages.<br> Thank you for visiting the Online Toy Store. Happy shopping, and may your adventures in play begin!
                </p>
            </div>
            <a href="/HomeAdmin/ShopListing" class="cus-btn primary">Shop Now</a>
        </div>
    </div>
</div>

<!-- Main Content Start -->
<div class="page-content">

    <!-- services Start -->
    <div class="services p-96">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-sm-6 mb-24 mb-lg-0">
                    <img src="~/assets/media/services/free-shipping.png" class="w-100 br-30" alt="">
                </div>
                <div class="col-lg-3 col-sm-6 mb-24 mb-lg-0">
                    <img src="~/assets/media/services/money-guarantee.png" class="w-100 br-30" alt="">
                </div>
                <div class="col-lg-3 col-sm-6 mb-24 mb-sm-0">
                    <img src="~/assets/media/services/online-support.png" class="w-100 br-30" alt="">
                </div>
                <div class="col-lg-3 col-sm-6 mb-24 mb-0">
                    <img src="~/assets/media/services/flexible-payment.png" class="w-100 br-30" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- services Start -->
    <!-- Top Seller Start -->
    <section class="top-seller">
        <div class="container">
            <div class="heading mb-48 text-center">
                <h2>Trendy Toys</h2>
            </div>
            <div class="product">
                <div class="row mb-16">
                    @{
                        var productTable = Model.dataForTable();

                        foreach (var product in productTable)
                        {
                            if (product != null && product.IsActive && product.SellCategory.Equals("Top Sellers"))
                            {
                                <div class="col-xl-3 col-lg-4 col-sm-6">
                                    <div class="product-card mb-32 mb-sm-0">
                                        <div class="img-block">
                                            <img src="@product.ImagePath" alt="" style="width: 100%; height: auto;">
                                        </div>
                                        <div class="content">
                                            <div class="name-price">
                                                <div class="product-name">
                                                    <h5 style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">@product.ProductName</h5>
                                                </div>
                                                <div class="product-price">
                                                    <h5 class="bold">– $@product.Price</h5>
                                                </div>
                                            </div>


                                            @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                                            {
                                                <input type="hidden" name="ProductId" value="@Model.ProductId">
                                                <button type="submit" class="cus-btn primary">Add to Cart</button>
                                            }


                                        </div>
                                    </div>
                                </div>
                            }

                        }

                    }

                </div>
                <div class="d-flex justify-content-center">
                    <a href="@Url.Action("ShopListing", "HomeAdmin")" class="cus-btn primary">Discover More </a>
                </div>
            </div>
        </div>
    </section>
    <!-- Top Seller End -->
    <!-- Product Cards Start -->
    <section class="product-card p-96">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-6 mb-24 mb-lg-0">
                    <a href=@Url.Action("ShopListing", "HomeAdmin") class="cards w-100">
                        <img src="~/assets/media/cards/card-1.png" class="w-100" alt="">
                        <h3 class="h-47 bold color-white">LEGO BRICKS</h3>
                    </a>
                </div>
                <div class="col-lg-4 col-sm-6 mb-24 mb-lg-0">
                    <a href=@Url.Action("ShopListing", "HomeAdmin") class="cards w-100">
                        <img src="~/assets/media/cards/card-2.png" class="w-100" alt="">
                        <h3 class="h-47 bold color-white">TOY CARS</h3>
                    </a>
                </div>
                <div class="col-lg-4 col-sm-6 offset-lg-0 offset-sm-3">
                    <a href=@Url.Action("ShopListing", "HomeAdmin") class="cards w-100">
                        <img src="~/assets/media/cards/card-3.png" class="w-100" alt="">
                        <h3 class="h-47 bold color-white">FLUFFY TOYS</h3>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Cards End -->
    <!-- Sales Start -->
    <section class="sales-product">
        <div class="container">
            <div class="d-flex flex-xl-row flex-column  gap-4">
                <div class="product st-2">
                    @{
