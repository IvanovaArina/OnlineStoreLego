
@{
    ViewBag.Title = "ManageProducts";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Product Management</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Product Management</h2>
        <div class="row mb-3">
            <div class="col-md-4">
                <input type="text" id="search" class="form-control" placeholder="Search for products...">
            </div>
        </div>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="productTable">
                <tr>
                    <td>1</td>
                    <td>Product 1</td>
                    <td>Category 1</td>
                    <td>$10.00</td>
                    <td><input type="checkbox" class="active-checkbox" checked></td>
                    <td>
                        <button class="btn btn-primary btn-sm edit-btn">Edit</button>
                        <button class="btn btn-danger btn-sm delete-btn">Delete</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Product 2</td>
                    <td>Category 2</td>
                    <td>$20.00</td>
                    <td><input type="checkbox" class="active-checkbox"></td>
                    <td>
                        <button class="btn btn-primary btn-sm edit-btn">Edit</button>
                        <button class="btn btn-danger btn-sm delete-btn">Delete</button>
                    </td>
                </tr>
                <!-- Add more products here -->
            </tbody>
        </table>
        <div class="text-left">
            <button class="btn btn-danger btn-lg" id="addProductBtn">Add Product</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#search').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#productTable tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $('.edit-btn').on('click', function() {
                // Edit button functionality
                alert('Edit button clicked');
            });

            $('.delete-btn').on('click', function() {
                // Delete button functionality
                if(confirm('Are you sure you want to delete this product?')) {
                    $(this).closest('tr').remove();
                }
            });

            $('.active-checkbox').on('change', function() {
                // Active checkbox functionality
                var isActive = $(this).is(':checked');
                var productName = $(this).closest('tr').find('td:eq(1)').text();
                alert('Product ' + productName + ' is now ' + (isActive ? 'active' : 'inactive'));
                // Here you can add an AJAX call to update the product status in the database
            });

            $('#addProductBtn').on('click', function() {
                // Add product button functionality
                alert('Add Product button clicked');
                // Here you can add code to show a modal or redirect to a product creation page
            });
        });
    </script>
</body>
</html>


